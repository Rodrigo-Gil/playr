<?xml version='1.0' encoding='utf-8'?>
<widget id="com.algonquinlive.shar0489" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>mediaPlugin</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!--
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="./playr_launcher/res/mdpi/playr_launcher.png" density="mdpi" />
        <icon src="./playr_launcher/res/hdpi/playr_launcher.png" density="hdpi" />
        <icon src="./playr_launcher/res/xhdpi/playr_launcher.png" density="xhdpi" />
        <icon src="./playr_launcher/res/xxhdpi/playr_launcher.png" density="xxhdpi" />
        <icon src="./playr_launcher/res/xxxhdpi/playr_launcher.png" density="xxxhdpi" />
        <!-- splash screen -->
        <splash src="./splash_screen/drawable-hdpi/Splash_Screen_Playr.png" density="port-hdpi"/>
        <splash src="./splash_screen/drawable-ldpi/Splash_Screen_Playr.png" density="port-ldpi"/>
        <splash src="./splash_screen/drawable-mdpi/Splash_Screen_Playr.png" density="port-mdpi"/>
        <splash src="./splash_screen/drawable-xhdpi/Splash_Screen_Playr.png" density="port-xhdpi"/>
        <splash src="./splash_screen/drawable-xxhdpi/Splash_Screen_Playr.png" density="port-xxhdpi"/>
        <splash src="./splash_screen/drawable-xxxhdpi/Splash_Screen_Playr.png" density="port-xxxhdpi"/>
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="3000" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
